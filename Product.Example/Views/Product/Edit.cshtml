
@model Product.App.Models.ViewModels.EditProductVM

@{
    ViewData["Title"] = "Create";
}

<h1>Edit</h1>

<h4>EditProductVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Count Update" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="EditPrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Price Update" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="EditIsAvailable">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" />
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="IsAvailable" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>

<div>
    <a href="/product">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
